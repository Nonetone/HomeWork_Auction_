<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password digest</th>
      <th>Current balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.price %></td>
        <td><%= button_to 'Show', user ,  data: {confirm: 'Are you sure?' }  %></td>
        <td><%= button_to 'Edit', edit_user_path(user) %></td>
       <td><%= button_to 'Destroy', user_path(user), method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

