
<div class="row good-box border border-dark rounded">
  <div class="col-2 info-person">
    <img class="person-img" src="/assets/auction.png" alt="">
    <div class="reviews">
      <span><%= link_to user&.username, profile_path(id: user&.id) %></span>
    </div>
  </div>

  <div class="col-10 good-content d-flex align-items-start flex-column">
    <div class="head-title">
      <a href="#" class="text-dark"><%= description.title %></a>
    </div>
    <div class="">
      <%= description.text %>
    </div>
    <div class="head-info mt-auto">
      <div class="row">
        <p class="col-auto" id="price-<%= description.id %>"><%= t('description.current_price') %>: <%= description.price.round %>$</p>
        <p class="col-auto"><%= t('description.raise_by') %>: <%= description.raise_by %>$</p>
        <span>
          <%= link_to do %>
            <%= image_tag 'bet.png', class: 'col-auto btn btn-primary btn-sm btn-light js-stake', id: description.id, height: '24' %>
          <% end %>
        </span>    
      </div>   
       <div class="row" style="margin-left: 0px;">
        <p><%= t('description.current_buyer') %>:</p> <p class="text-success buyer" id="username-<%= description.id %>"><%= description.buyer&.username %></p>
        </div>

        <div class="row time-auction">
        <p class="col-auto"><%= t('description.time_left') %>:</p>
        <p class="col-auto text-danger"><%= view_time(left_time description.time_end) %></p>
      </div>
    </div>
  </div>
</div>
